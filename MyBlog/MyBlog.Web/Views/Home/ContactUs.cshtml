@model ContactMessage

<section class="ftco-section contact-section px-md-4">
    <div class="container">
        <div class="row block-9">
            <h2>Bizimle iletişime geçin!</h2>
            <div class="col-lg-12 d-flex">
                <form method="post" class="bg-light p-5 contact-form">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Adınız" asp-for="FirstName">
                        <span class="text-danger" asp-validation-for="FirstName"></span>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Soyadınız" asp-for="LastName">
                        <span class="text-danger" asp-validation-for="LastName"></span>

                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" placeholder="Email Adresiniz" asp-for="Email">
                        <span class="text-danger" asp-validation-for="Email"></span>

                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Telefon Numaranız" asp-for="PhoneNumber">
                        <span class="text-danger" asp-validation-for="PhoneNumber"></span>

                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Konu" asp-for="Title">
                        <span class="text-danger" asp-validation-for="Title"></span>

                    </div>
                    <div class="form-group">
                        <textarea cols="30" rows="7" class="form-control" placeholder="Mesaj" asp-for="Description"></textarea>
                        <span class="text-danger" asp-validation-for="Description"></span>

                    </div>
                    <div class="form-group">
                        <input type="submit" value="Gönder" class="btn btn-primary py-3 px-5">
                    </div>
                </form>

            </div>
             
        </div>
    </div>
</section>