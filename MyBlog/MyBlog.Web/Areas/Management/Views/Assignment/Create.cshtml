@model Assignment

<div class="card">
    <div class="card-body">
        <form method="post">

            <label asp-for="ProjectId"></label>
            <select asp-for="ProjectId" asp-items="@ViewBag.ProjectId" class="form-control">
            </select>
            <span class="text-danger" asp-validation-for="ProjectId"></span>

            <label asp-for="Title"></label>
            <input class="form-control mb-3" type="text"
                   placeholder="Başlık" asp-for="Title">
            <span class="text-danger" asp-validation-for="Title"></span>

           <label asp-for="Description"></label>
            <textarea class="form-control mb-3" type="text"
                      placeholder="Açıklama" asp-for="Description" rows="4">
                   </textarea>
            <span class="text-danger" asp-validation-for="Description"></span>

            <label asp-for="Deadline"></label>
            <input type="date" class="form-control mb-3" asp-for="Deadline" />

            <input type="submit" value="Kaydet" class="btn btn-primary" />

        </form>
    </div>
</div>