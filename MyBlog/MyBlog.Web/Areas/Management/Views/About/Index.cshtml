@model About

<div class="row">
    <div class="col-12">
        <div class="card">
            <img src="@Model.ImageUrl" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">
                    @Html.Raw(Model.Description)
                </p>

                <a class="btn btn-warning"
                   href="/Management/About/Edit/@Model.Id">Düzenle</a>

            </div>
        </div>
    </div>
</div>