@model Project

<div class="row">
    <div class="col-12">
        <div class="card">
            <img src="@Model.ImageUrl" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">
                    @Html.Raw(Model.Description)
                </p>

                <table class="table table-responsive">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Başlık</th>
                            <th>Teslim Tarihi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Assignments) {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Title</td>
                                <td>@item.Deadline.ToString("dd MMMM yyyy")</td>
                            </tr>
                        } 
                    </tbody>
                </table>

                <a class="btn btn-warning"
                   href="/Management/Project/Edit/@Model.Id">Düzenle</a>

            </div>
        </div>
    </div>
</div>