@model IEnumerable<Project>

<a href="/Management/Project/Create" class="btn btn-primary">Yeni Ekle</a>

<div class="card radius-15">
	<div class="card-body">
		<div class="card-title">
			<h4 class="mb-0">Proje Listesi</h4>
			@* <p>@Model.Count()</p> *@
			<p>@ViewBag.ProjectCount adet proje bulundu</p>
		</div>
		<hr>
		<div class="table-responsive">
			<table class="table mb-0">
				<thead>
					<tr>
						<th scope="col">Id</th>
						<th scope="col">Başlık</th>
						<th scope="col">Resim</th>
						<th>Resim uzantısı</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model) {
						<tr>
							<th scope="row">@item.Id</th>
							<td>@item.Name</td>
							<td><img src="@item.ImageUrl" width="100px"/></td>
							<td>@item.ImageUrl</td>
							<td>
								<a class="btn btn-success"
								   href="/Management/Project/Details/@item.Id">Detay</a>

								<a class="btn btn-warning"
								   href="/Management/Project/Edit/@item.Id">Düzenle</a>

								<a class="btn btn-danger"
								   href="/Management/Project/Delete/@item.Id">Sil</a>
							</td>
						</tr>
					}

				</tbody>
			</table>
		</div>
	</div>
</div>