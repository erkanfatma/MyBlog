@model Skill

<div class="card">
    <div class="card-body">
        <form method="post">
            <input class="form-control mb-3" type="text"
                   placeholder="Başlık" asp-for="Title">
            <span class="text-danger" asp-validation-for="Title"></span>

            <input class="form-control mb-3" type="number"
                   placeholder="Puan" asp-for="Score">
            <span class="text-danger" asp-validation-for="Score"></span>

            <textarea class="form-control mb-3" type="text"
                   placeholder="Açıklama" asp-for="Description" rows="4">
                   </textarea>
            <span class="text-danger" asp-validation-for="Description"></span>

            <input type="submit" value="Kaydet" class="btn btn-primary" />

        </form>
    </div>
</div>